<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_gravity="center">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/dialog_pin_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="@color/mainTextColor"
            android:textSize="24sp"
            android:text="Enter password"/>

        <LinearLayout
            android:id="@+id/dialog_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_pin_text"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/dialog_pin_1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/mainTextColor"
                android:inputType="numberPassword"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/dialog_pin_2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/mainTextColor"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/dialog_pin_3"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/mainTextColor"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/dialog_pin_4"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/mainTextColor"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_pin_fingerprint"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_fingerprint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_pin"
            android:layout_marginTop="48dp"/>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>